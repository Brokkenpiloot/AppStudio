<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="joostwagenaar.Ghost" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ghost"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_main_victory" >
        </activity>
        <activity
            android:name=".VictoryActivity"
            android:label="@string/title_activity_victory" >
        </activity>
        <activity
            android:name=".ScoreboardActivity"
            android:label="@string/title_activity_scoreboard" >
        </activity>

    </application>

</manifest>
