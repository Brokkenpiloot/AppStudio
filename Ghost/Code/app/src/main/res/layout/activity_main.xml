<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#fffff1f1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text=""
        android:id="@+id/player1TextView"
        android:textSize="30sp"
        android:textColor="#ffffc2a1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text=""
        android:id="@+id/player2TextView"
        android:textSize="30sp"
        android:textColor="#ffffc2a1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameSubmittedText"
        android:layout_below="@+id/player1TextView"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textSize="30sp"
        android:textColor="#ffffc2a1"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fill in one letter"
        android:id="@+id/gameEditText"
        android:layout_below="@+id/gameSubmittedText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submitButton"
        android:id="@+id/submitButton"
        android:layout_below="@+id/gameEditText"
        android:layout_centerHorizontal="true"
        android:onClick="onSubmitButtonClicked" />
</RelativeLayout>
